<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a
      href="/projects/<%=@project.uri_name%>"
      class="nav-link <%= "active" if current_page? project_show_path %>"
      aria-controls="artifact"
      aria-selected="true"
    >
      <i class="fa fa-list-alt"></i> Artifacts
    </a>
  </li>

  <li class="nav-item">
    <a
      href="/traceability/<%=@project.uri_name%>"
      class="nav-link <%= "active" if current_page? traceability_path %>"
    >
      <i class="fa fa-circle"></i> Traceability
    </a>
  </li>

  <li class="nav-item">
    <a
      href="/projects/<%=@project.uri_name%>/artifacts/new"
      class="nav-link"
    >
      <i class="fa fa-plus"></i> New Artifact
    </a>
  </li>

  <% if @project.users.exists?(current_user.id) %>
    <li class="nav-item">
      <a
        href="/projects/<%=@project.name%>/settings"
        class="nav-link"
      >
        <i class="fa fa-cog"></i> Settings
      </a>
    </li>
  <% end %>
</ul>
