<% if @project.logo.attached? then %>
  <%= image_tag url_for(@project.logo), class: "img-fluid img-thumbnail" %>
<% else %>
  <%= image_tag url_for(@project.default_logo),
            class: "img-fluid img-thumbnail",
            alt: "Generated by tinygraphs.com" %>
  <p class="text-muted mt-3">
    Default logo image by <a href="https://www.tinygraphs.com/">tinygraphs</a>
  </p>
<% end %>
