<div class="col-md-8 col-md-offset-2">
  <div class="page-head">
    <h1> Create a new Project </h1>
    <small>You will keep requirements into this project</small>
  </div>

  <div class="page-content">
    <%= simple_form_for(@project) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :description, as: :text %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, 'Criar projeto', class: 'btn btn-success pull-right' %>
      </div>
    <% end %>

    <%= link_to 'Back', projects_path, class: 'btn btn-default pull-left'  %>
  </div>
</div>
