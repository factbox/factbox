<div class="row">
  <div class="col-md-3">
    <div class="text-center">
      <%= render 'logo' %>
    </div>
    <h1><%= @project.name %></h1>
    <div class="description info">
      <%= @project.description %>
    </div>
    <div class="dropdown-divider"></div>
    <div class="actions text-center">
      <a href="/projects/<%= @project.id %>/artifacts/new" type="button" class="btn btn-primary">
        Create Artifact<i class="fa fa-plus-square ml-3"></i>
      </a>
    </div>
  </div>

  <div class="col-md-9">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
      <!-- <li class="nav-item">
        <a
          href="#feed"
          class="nav-link active"
          id="feed-tab"
          data-toggle="tab"
          role="tab"
          aria-controls="feed"
          aria-selected="true"
        >
          <i class="fa fa-home"></i> Feed
        </a>
      </li> -->
      <li class="nav-item">
        <a
          href="#artifact"
          class="nav-link active"
          id="artifact-tab"
          data-toggle="tab"
          role="tab"
          aria-controls="artifact"
          aria-selected="true"
        >
          <i class="fa fa-list-alt"></i> Artifacts
        </a>
      </li>

      <li class="nav-item">
        <a
          href="/traceability/<%=@project.uri_name%>"
          class="nav-link"
        >
          <i class="fa fa-circle"></i> Traceability
        </a>
      </li>

      <% @plugins.each do |plugin| %>
        <li class="nav-item">
          <a
            href="/<%=@project.id%>/<%=plugin[:resource]%>"
            class="nav-link"
          >
            <i class="fa fa-puzzle-piece"></i> <%= plugin[:name] %>
          </a>
        </li>
      <% end %>

      <li class="nav-item">
        <a
          href="/projects/<%=@project.name%>/settings"
          class="nav-link"
        >
          <i class="fa fa-cog"></i> Settings
        </a>
      </li>
    </ul>

    <div class="tab-content mt-2" id="myTabContent">
      <!-- <div class="tab-pane fade show active" id="feed" role="tabpanel" aria-labelledby="feed-tab">
        <% if nil %>
        <div class="panel-body requirements"></div>
        <% else %>
        <h4 class="text-center info">
          <span class="glyphicon glyphicon-info-sign"></span>
          None activity yet...
        </h4>
        <% end %>
      </div> -->
      <div class="tab-pane fade show active" id="artifact" role="tabpanel" aria-labelledby="artifact-tab">
        <%= render 'artifact-list' %>
      </div>
  	</div>
  </div>
</div>
