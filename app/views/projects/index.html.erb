<div class="row">
  <div class="navbar-default sidebar" role="navigation">
	  <div class="col-md-4">
      <div class="sidebar-nav">
        <ul class="nav">
          <li id="projects">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3>Projects</h3>
              </div>
              <ul class="list-group text-left">
                <% if @user_projects %>
                  <% @user_projects.each do |project| %>
                    <li class="list-unstyled list-projects list-group-item">
                      <a href="#" %>
                        <i class="glyphicon glyphicon-book"></i> <%= project.name %>
                      </a>
                    </li>
                  <% end %>
                  <% else %>
                    <h3>Você não tem nenhum projeto ainda</h3>
                <% end %>
              </ul>
            </div>
          </li>
          <li>
            <h2>
              <a href="/projects/new" class="btn btn-success btn-group-justified">
                Criar projeto
              </a>
            </h2>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>
