<%= render 'layouts/breadcrumb',
    project_name: @project.name,
    current_page: 'Project settings' %>

<div class="row">
  <div class="col-md-12">
    <div class="page-head">
      <h1>Edit project</h1>
      <small>Settings, preferences and sensitive actions</small>
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col-md-6">
    <div>
      <h4>Basic informations</h4>
      <%= render 'form', backbutton: false %>
    </div>

    <div class="mt-5">
      <h4 class="mb-3">Invite members</h4>
      <%= render 'invite_form' %>
    </div>
  </div>

  <div class="col-md-3 offset-md-2">
    <h4>Project picture</h4>
    <%= simple_form_for(@project) do |f| %>
      <%= render 'logo' %>
      <%= f.input :logo, class: "mt-3" %>
      <%= f.button :submit, value: 'Update picture', class: 'btn btn-success'%>
    <% end %>
  </div>
</div>
