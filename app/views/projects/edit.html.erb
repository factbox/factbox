<div class="row">
  <div class="col-md-12">
    <div class="page-head">
      <h1>Edit project</h1>
      <small>Settings of project</small>
    </div>
  </div>
</div>

<div class="row mt-3">
  <div class="col-md-6">
    <%= render 'form', note: @project %>
  </div>
  <div class="col-md-4 offset-md-2">
    <%= simple_form_for @project do |f| %>
      <% if @project.logo.attached? then %>
        <%= image_tag url_for(@project.logo), class: "img-fluid img-thumbnail" %>
      <% else %>
        <%= image_tag url_for(@project.default_logo),
                  class: "img-fluid img-thumbnail",
                  alt: "Generated by tinygraphs.com"
        %>
        <p class="text-muted mt-3">
          Default logo image by <a href="https://www.tinygraphs.com/">tinygraphs</a>
        </p>
      <% end %>
      <%= f.input :logo, label: 'Profile picture', class: "mt-3" %>
      <%= f.button :submit, class: 'btn btn-success', label: 'Update logo' %>
    <% end %>
  </div>
</div>
