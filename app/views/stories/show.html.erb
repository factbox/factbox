<%= render 'layouts/breadcrumb',
    project_name: @artifact.project.name,
    current_page: 'Story' %>

<div class="row">
  <h1><%= @artifact.title %></h1>
</div>

<div class="row mb-3">
  <p class="card-text text-muted">
    <a href="/user/<%= @artifact.author.login %>"><%= @artifact.author.login %></a>
    updated <%= time_ago_in_words @artifact.time_creation %>
  </p>
</div>

<h4>Story</h4>

<div class="row ml-3 mb-3">
  <%= @artifact.specific.story %>
</div>

<% unless @artifact.specific.criterias.empty? %>
  <h4>Acceptance criteria</h4>

  <ul>
    <% @artifact.specific.criterias.each do |c| %>
      <li><%= c.content %></li>
    <% end %>
  </ul>
<% end %>
