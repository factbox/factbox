<% stylesheet_link_tag 'stylesheets/index.css' %>
<section class="initial">
	<div class="container">
		<div class="row">
			<div class="col-xs-12 col-md-9">
        <h1>Welcome to Urutau</h1>
          <p><small>Simples, adaptav√©l e aberto</small></p>
      </div>
			<div class="col-xs-6 col-md-3">
        <%= form_tag("/user/authenticate", method: "POST", class: "form-signin") do %>
          <%= text_field_tag(:login, nil, class: "form-control", autofocus: true,
            required: true, placeholder: "User login") %>
          <%= password_field_tag(:password, nil, class: "form-control",
            required: true, placeholder: "Password") %>
					<%= submit_tag("Login", class: "btn btn-lg btn-primary btn-block") %>
        <% end %>
     	</div>
    </div>
  </div>
</section>

<section id="register" class="register home-section">
	 <div class="container">
		<div class="row">
			<div class="col-xs-7 col-md-4 col-md-offset-1">
        <!-- PUT REGISTER ERRORS HERE -->
				<h2>Sign in</h2>
        <%= form_tag("/user/register", method: "POST", class: "form-signin") do %>
					<%= email_field "email", nil, class: "form-control",
            placeholder:"User email", required: true %>
          <%= text_field_tag "name", nil, class: "form-control",
            placeholder: "User name", required: true %>
          <%= text_field_tag "lastName", nil, class: "form-control",
            placeholder: "User lastname", required: true %>
          <%= text_field_tag "login", nil, class: "form-control",
            placeholder: "User login", required: true %>
          <%= password_field_tag "password", nil, class: "form-control",
            placeholder: "Password", required: true %>
          <%= password_field_tag "password_verify", nil, class: "form-control",
            placeholder: "Confirm your password", required: true %>
          <%= submit_tag "Register", class: "btn btn-lg btn-success btn-block" %>
					<p class="info">
  					The registration rules depend  of the enterprise policy.
            <br/>
  					More information: <a href="#contact" class="page-scroll">Contact administrator</a>.
					</p>
        <% end %>
			</div>
			<div class="col-xs-6 col-md-4 col-md-offset-2">
				<div class="thumbnail">
					<h1 class="motive">
						<i class="glyphicon glyphicon-cog"></i> Highly configurable
					</h1>
					<div class="caption">
						Urutau provides how many settings you need
					</div>
				</div>
				<div class="thumbnail">
					<h1 class="motive">
						<i class="glyphicon glyphicon-edit"></i> Easy to contribute
					</h1>
					<div class="caption">
						We build it, to facility your contribute
					</div>
				</div>
				<div class="thumbnail">
					<h1 class="motive">
						<i class=" glyphicon glyphicon-book"></i>
						Helpful to manage requirements
					</h1>
					<div class="caption">
						Now you will have control!
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
