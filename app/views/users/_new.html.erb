<%= form_for @user, html: {class: "form-signin"} do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h3 class="text-warning text-center">Some errors happened!</h3>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li class="text-danger error-element"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.email_field :email, class: "form-control",
    placeholder:"User email", required: true %>
  <%= f.text_field :name, class: "form-control",
    placeholder: "First name", required: true %>
  <%= f.text_field :lastName, class: "form-control",
    placeholder: "Last name", required: true %>
  <%= f.text_field :login, class: "form-control",
    placeholder: "User login", required: true %>
  <%= f.password_field :password, class: "form-control",
    placeholder: "Password", required: true %>
  <%= f.password_field :password_confirmation, class: "form-control",
    placeholder: "Confirm your password", required: true %>
  <%= f.submit "Register", class: "btn btn-lg btn-success btn-block" %>

  <p class="info">
    The registration rules depend  of the enterprise policy.
    <br/>
    More information: <a href="#contact" class="page-scroll">Contact administrator</a>.
  </p>
<% end %>
