<div class="col-md-3">
  <%=
    if @user.avatar.attached? then
       image_tag url_for(current_user.avatar), class: "img-fluid img-thumbnail"
    end
  %>
  <h1><%= @user.name + ' ' + @user.lastName %></h1>

  <div class="text-muted">
    <h4>@<%= @user.login %></h4>

    <div class="row">
      <i class="fa fa-envelope ml-3 mr-2"></i><%= @user.email %>
    </div>

    <div class="row">
      <% if @user.work %>
        <i class="fa fa-briefcase ml-3 mr-2"></i>Software Enginner
      <% end %>
    </div>

    <div class="row">
      <% if @user.location %>
        <i class="fa fa-pushpin ml-3 mr-2"></i>Gama-DF
      <% end %>
    </div>

    <div class="row">
      <i class="fa fa-calendar-alt ml-3 mr-2"></i>
      Member since <%= @user.created_at.strftime("%B %d, %Y") %>
    </div>
  </div>

  <div class="dropdown-divider"></div>

  <h5>Projects</h5>

  <% unless @user.projects.empty? %>
    <ul class="list-group">
      <% @user.projects.each do |project| %>
        <li class="list-unstyled">
          <i class="fa fa-book mr-1"></i>
          <a href="projects/<%= project.id %>">
            <%= project.name %>
          </a>
        </li>
      <% end %>
    </ul>
  <% end %>

</div>
