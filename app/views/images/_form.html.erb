<%= simple_form_for(@artifact, as: 'artifact') do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :project_id, as: :hidden, input_html: { value: @artifact.project_id } %>
    <%= f.input :type, as: :hidden, input_html: { value: 'Image' } %>
    <%= f.input :title %>

    <!-- only when edit -->
    <%= if @artifact.file.attached? then image_tag url_for(@artifact.file), class: "img-fluid" end %>

    <%= f.input :file, class: "mt-3" %>

    <div class="row mt-3">
      <%= link_to 'Back', project_path(@artifact.project), class: "btn btn-light mr-1" %>
      <%= f.button :submit, class: 'btn btn-success pull-right' %>
    </div>
  </div>
<% end %>
