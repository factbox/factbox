<%= simple_form_for(@artifact, as: 'artifact') do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :project_id, as: :hidden, input_html: { value: @artifact.project_id } %>
    <%= f.input :type, as: :hidden, input_html: { value: 'Image' } %>
    <%= f.input :title %>

    <!-- only when edit -->
    <%= if @artifact.file.attached? then image_tag(url_for(@artifact.file), width: '100%') end %>

    <%= f.input :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success pull-right' %>
  </div>
<% end %>
